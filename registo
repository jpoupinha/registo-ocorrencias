import streamlit as st
import pandas as pd
from datetime import datetime
import os

# Nome do ficheiro CSV onde os dados ser√£o guardados
FICHEIRO_DADOS = "ocorrencias.csv"

# Lista de t√©cnicos dispon√≠veis
tecnicos = ["Bruno Guerreiro", "Ronaldo Tavares", "Pedro Puga", "Jos√© Reis"]

# Configura√ß√£o da p√°gina
st.set_page_config(page_title="Registo de Ocorr√™ncias", layout="centered")

# Inicializar sess√£o
if "tecnico_selecionado" not in st.session_state:
    st.session_state.tecnico_selecionado = None

# Ecr√£ 1: Sele√ß√£o do t√©cnico
if st.session_state.tecnico_selecionado is None:
    st.image("image.png", width=200)  # Certifica-te que o ficheiro image.png est√° no reposit√≥rio
    st.title("üë§ Selecionar T√©cnico")
    tecnico = st.selectbox("Escolha o seu nome:", tecnicos)
    if st.button("Continuar"):
        st.session_state.tecnico_selecionado = tecnico
        st.experimental_rerun()

# Ecr√£ 2: Formul√°rio de ocorr√™ncia
else:
    st.title("üìã Registo de Ocorr√™ncia")
    st.markdown(f"**T√©cnico:** {st.session_state.tecnico_selecionado}")

    with st.form("form_ocorrencia"):
        data = st.date_input("Data", value=datetime.today())
        localizacao = st.text_input("Localiza√ß√£o")
        ocorrencia = st.text_area("Descri√ß√£o da Ocorr√™ncia")
        acao = st.text_area("A√ß√£o Tomada")
        turno = st.selectbox("Turno", ["Noite", "Manh√£", "Tarde"])
        submeter = st.form_submit_button("Submeter")

        if submeter:
            nova_ocorrencia = {
                "Data": data.strftime("%Y-%m-%d"),
                "T√©cnico": st.session_state.tecnico_selecionado,
                "Localiza√ß√£o": localizacao,
                "Ocorr√™ncia": ocorrencia,
                "A√ß√£o Tomada": acao,
                "Turno": turno
            }

            if os.path.exists(FICHEIRO_DADOS):
                df = pd.read_csv(FICHEIRO_DADOS)
                df = pd.concat([df, pd.DataFrame([nova_ocorrencia])], ignore_index=True)
            else:
                df = pd.DataFrame([nova_ocorrencia])

            df.to_csv(FICHEIRO_DADOS, index=False)
            st.success("‚úÖ Ocorr√™ncia registada com sucesso!")

    # Relat√≥rio
    st.subheader("üìä Relat√≥rio de Ocorr√™ncias")
    if os.path.exists(FICHEIRO_DADOS):
        df = pd.read_csv(FICHEIRO_DADOS)
        st.dataframe(df)
    else:
        st.info("Ainda n√£o existem ocorr√™ncias registadas.")
